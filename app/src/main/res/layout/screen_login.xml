<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0E1629">
    <ImageView
        android:layout_marginTop="24dp"
        android:id="@+id/image"
        android:src="@drawable/asaxiy"
        android:layout_width="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/text"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:text="Welcome to Asaxiy Books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/login_text"
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@id/email_input"
        app:layout_constraintTop_toBottomOf="@id/login_text"
        android:id="@+id/gmail_text"
        android:text="Enter gmail"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/gmail_text"
        android:id="@+id/email_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@android:color/transparent"
        app:errorEnabled="true"
        tools:ignore="MissingConstraints">

        <EditText
            android:maxLength="30"
            android:textColor="@color/white"
            android:background="@drawable/edit_text_bg"
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="example@gmail.com" />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        app:layout_constraintStart_toStartOf="@id/password_input"
        app:layout_constraintTop_toBottomOf="@id/email_input"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="Password"
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/password_text"
        android:id="@+id/password_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@android:color/transparent"
        app:errorEnabled="true"
        tools:ignore="MissingConstraints">

        <EditText
            android:textColor="@color/white"
            android:background="@drawable/edit_text_bg"
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password" />

    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:maxLength="15"
        android:id="@+id/enter_btn"
        android:layout_marginTop="16dp"
        android:text="Enter"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/password_input"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView

        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dont have an account?"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/enter_btn"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="@id/enter_btn"
        app:layout_constraintTop_toBottomOf="@id/enter_btn" />

    <TextView
        android:id="@+id/sing_up_text"
        android:layout_marginStart="8dp"
        android:text="Sign up"
        android:textColor="#008BFD"
        app:layout_constraintStart_toEndOf="@id/text1"
        app:layout_constraintTop_toTopOf="@id/text1"
        app:layout_constraintBottom_toBottomOf="@id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>