<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0E1629">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="12dp"
            android:id="@+id/image"
            android:src="@drawable/asaxiy"
            android:layout_width="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/text"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/image"
            android:text="Welcome to Asaxiy Books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/login_text"
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/firstName_edit_text"
            app:layout_constraintTop_toBottomOf="@id/login_text"
            android:id="@+id/gmail_text"
            android:text="Enter FirstName"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/firstName_edit_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_text_bg"
            android:hint="  First Name"
            android:maxLength="15"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gmail_text" />


        <TextView
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/lastName_edit_text"
            app:layout_constraintTop_toBottomOf="@id/firstName_edit_text"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Enter LastName"
            android:id="@+id/password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/lastName_edit_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_text_bg"
            android:hint="  Last Name"
            android:maxLength="25"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_text" />


        <TextView
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/lastName_edit_text"
            app:layout_constraintTop_toBottomOf="@id/lastName_edit_text"
            android:textSize="16sp"
            android:id="@+id/text_gmail"
            android:textColor="@color/white"
            android:text="Enter gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/edit_gmail_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/edit_text_bg"
            android:hint="  example@gmail.com"
            android:maxLength="30"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_gmail" />


        <TextView
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/edit_gmail_text"
            app:layout_constraintTop_toBottomOf="@id/edit_gmail_text"
            android:textSize="16sp"
            android:id="@+id/text_password"
            android:textColor="@color/white"
            android:text="Enter password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/edit_password_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_text_bg"
            android:hint="  password"
            android:maxLength="15"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_password" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_bg"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_password_text" />

        <TextView

            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Already have an account?"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/save_btn"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toStartOf="@id/save_btn"
            app:layout_constraintTop_toBottomOf="@id/save_btn" />

        <TextView
            android:id="@+id/log_text"
            android:layout_marginStart="8dp"
            android:text="Log in"
            android:textColor="#008BFD"
            app:layout_constraintStart_toEndOf="@id/text1"
            app:layout_constraintTop_toTopOf="@id/text1"
            app:layout_constraintBottom_toBottomOf="@id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.core.widget.NestedScrollView>